# Replace your .gitignore with this more comprehensive version
cat > .gitignore << 'EOF'
# Virtual environment
venv/
.env/
.envrc/

# ALL data directories - exclude everything
data/

# Python cache and build files
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Log files
*.log
logs/

# Database files
*.db
*.sqlite
*.sqlite3

# Large binary files
*.parquet
*.csv
*.so
*.dll
*.exe
EOF